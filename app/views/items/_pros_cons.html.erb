<div class="col-md-6">
  <h1 class="left"><%=pro_con.titlecase%>s <small class="right bottom">&nbsp; total: <%= sum %></small></h1>
  <div class="button-group">
  <%if pro_con == "pro"%>
    <%= form_for(list_pros_path(@list, @pro)) do |f| %>
      <%= f.text_field :description, :class => "new-item", :placeholder => ("Add a new pro...") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  <%else%>
    <%= form_for(list_cons_path(@list, @con)) do |f| %>
      <%= f.text_field :description, :class => "new-item", :placeholder => ("Add a new con...") %>
      <%= f.submit :style => "display: none" %>
    <% end %>
  <%end%>
  </div>
  <br>
  <table class="table table-responsive">
    <%= render partial: 'items/item_user', locals: {user: list.user}%>
    <tbody>
      <%= render :partial => "items/item", :collection => owner_items, :as => :item %>
    </tbody>
  </table>

  <% contributor_items_hash.each do |user, items|%>
    <table class="table table-responsive">
      <%= render partial: 'items/item_user', locals: {user: user}%>
      <tbody>
        <%= render :partial => "items/item", :collection => items, :as => :item %>
      </tbody>
    </table>
  <%end%>

  <table class="table table-responsive">
    <thead>
      <h2 class="right"><%=pro_con%> total: <%= sum %></h2>
    </thead>
  </table>
</div>
