<% if logged_in?%>
  <div class="row">
    <aside class="col-md-5">
      <div class="row list-header">
        <div class="col-md-6">
          <section class="user_info">
            <%= render :partial => 'shared/user_info', :locals => {user: current_user}%>
            <%= link_to "view my profile", user_path(current_user) %>
          </section>
        </div>
        <div class="col-md-3">
          <section class="stats">
            <%= render 'shared/user_list_count' %>
          </section>
        </div>
        <div class="col-md-3">
          <section class="stats">
            <%= render 'users/starred' %>
          </section>
        </div>
      </div>
      <section class="list_form">
        <%= render 'shared/list_form'%>
      </section>
    </aside>
    <div class="col-md-7">
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="jumbotron">
  <h1>Social Pro-Con Web App</h1>
  <h2>
      Create pro-con lists. Star your friends' pro-con lists.
      <%= link_to("Check out the code!",
        "https://github.com/kaileeagray/social-pro-con-rails-assessment",
        target:"_blank", rel:"noopener no referrer")%>
  </h2>
  <div class="center-block break">
      <%= link_to "Sign up now!", signup_path, class: "center btn btn-lg btn-primary center-block" %>
  </div>
</div>
<% end %>
